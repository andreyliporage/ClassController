{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Professor</div>
            <div>
               {{teacher.name}}
            </div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>
                {{teacher.age}}
            </div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>
                {{teacher.graduation}}
            </div>
        </div>

        <div class="item">
            <div>Modalidade</div>
            <div>
                <span>{{"Presencial" if teacher.modalidade == "P" else "À Distância"}}</span>                
            </div>
        </div>

        <div class="item">
            <div>Área de atuação</div>
            <div>
                {% for subject in teacher.subjects %}
               <span>{{subject}}</span>
               {% endfor %}
            </div>
        </div>       
        <div class="item">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>

        <a href="#" class="button">Editar</a>

    </section>
</form>
{% endblock %}