{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Aluno</div>
            <div>
               {{student.name}}
            </div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>
                {{student.age}}
            </div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>
                {{student.graduation}}
            </div>
        </div>

        <div class="item">
            <div>Modalidade</div>
            <div>
                <span>{{"Presencial" if student.modalidade == "P" else "À Distância"}}</span>                
            </div>
        </div>

        <div class="item">
            <div>Área de atuação</div>
            <div>
                {% for subject in teacher.subjects %}
                <span>{{subject}}</span>
                {% endfor %}
            </div>
        </div>       
        <div class="item">
            <div>Desde</div>
            <div>{{student.created_at}}</div>
        </div>

        <a href="/students/{{student.id}}/edit" class="button">Editar</a>

    </section>
</form>
{% endblock %}